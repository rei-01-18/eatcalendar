<header>
  <div class='topheader'>
    <%= link_to 'トップページへ', root_path %>
  </div>
</header>

<div class="contents row">
  <p><%= @nickname %>さんの投稿一覧</p>
  <% @plans.each do |plan| %>
    <div class="content_post">
      <p><%= plan.date %></p>
      <p><%= plan.meal.name %> <%= plan.plan %></p>
      <p>いいね件数: <%= plan.likes.count %></p>
      <p>
        <% if current_user.already_liked?(plan) %>
          <%= button_to 'いいねを取り消す', plan_like_path(plan), method: :delete %>
        <% else %>
          <%= button_to 'いいね', plan_likes_path(plan) %>
        <% end %>
    </div>
    <%= link_to '編集', edit_plan_path(plan), method: :get %>
    <%= link_to '削除', plan_path(plan.id), method: :delete %>
  <% end %>
  <div class='menpage'>
    <%= link_to '男性', men_plans_path, method: :get %>
  </div>
  <div class='women'>
    <%= link_to '女性', women_plans_path, method: :get %>
  </div>
</div>


